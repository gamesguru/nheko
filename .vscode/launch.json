{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug Nheko (Native Debug/GDB)",
            "type": "gdb",
            "request": "launch",
            "target": "${workspaceFolder}/build/nheko",
            "cwd": "${workspaceFolder}",
            "gdbpath": "/usr/bin/gdb",
            "valuesFormatting": "parseText"
        },
        {
            "name": "Debug Nheko (CodeLLDB)",
            "type": "lldb",
            "request": "launch",
            "program": "${workspaceFolder}/build/nheko",
            "cwd": "${workspaceFolder}"
        }
    ]
}